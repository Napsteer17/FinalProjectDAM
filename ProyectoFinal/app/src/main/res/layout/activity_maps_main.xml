<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsMainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.insbaixcamp.proyectofinal.MapsMainActivity" />


    <RadioGroup
        android:id="@+id/radio_group_list_selector"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/ibShop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/shopicon" />

        <ImageButton
            android:id="@+id/ibSkate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/skateicon" />

        <ImageButton
            android:id="@+id/ibNews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/newsicon" />

        <ImageButton
            android:id="@+id/ibWorld"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/worldicon" />
    </RadioGroup>
</FrameLayout>