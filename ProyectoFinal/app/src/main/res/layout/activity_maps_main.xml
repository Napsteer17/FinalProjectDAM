<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsMainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.insbaixcamp.proyectofinal.MapsMainActivity" />


    <RadioGroup
        android:id="@+id/rgMenuButtons"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/ibShop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/shopicon" />

        <TextView
            android:id="@+id/tvShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibShop"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/title_shop"
            android:textColor="#ffff"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/ibMarkers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/skateicon" />

        <TextView
            android:id="@+id/tvMarkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibShop"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/title_markers"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibNews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/newsicon" />

        <TextView
            android:id="@+id/tvNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibShop"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/title_news"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibGallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/worldicon" />

        <TextView
            android:id="@+id/tvGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibShop"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/title_gallery"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibChat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/chaticon" />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibShop"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/title_chat"
            android:textColor="#ffff"
            android:textStyle="bold" />
    </RadioGroup>
</FrameLayout>